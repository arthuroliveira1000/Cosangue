<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D83B31"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tcc.aplicativo.Inicio">

    <EditText
        android:id="@+id/et_senha"
        style="@style/editText"
        android:ems="10"
        android:hint="@string/et_senha"
        android:inputType="textPassword"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:theme="@android:style/Widget.Material.Light.EditText"
        android:layout_below="@+id/et_usuario"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/et_usuario"
        style="@style/editText"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/et_senha"
        android:layout_alignStart="@+id/et_senha"
        android:layout_marginTop="175dp"
        android:ems="10"
        android:hint="@string/et_usuario"
        android:theme="@android:style/Widget.Material.Light.EditText" />


    <Button
        android:id="@+id/bt_entrar"
        style="@style/Buttons"
        android:layout_below="@+id/et_senha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="@string/bt_entrar" />

    <Button
        android:id="@+id/bt_cadastre_se"
        style="@style/Buttons"
        android:layout_alignLeft="@+id/bt_entrar"
        android:layout_alignStart="@+id/bt_entrar"
        android:layout_below="@+id/bt_entrar"
        android:text="@string/bt_cadastre_se" />

    <Button
        android:id="@+id/bt_entrar_facebook"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bt_cadastre_se"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#3b5998"
        android:minWidth="150dp"
        android:singleLine="true"
        android:text="@string/bt_entrar_com_facebook"
        android:textColor="#FAFAFA" />

    <ImageView
        android:id="@+id/marca_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_usuario"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:contentDescription="marca_horizontal"
        android:src="@drawable/marca_android" />

</RelativeLayout>
